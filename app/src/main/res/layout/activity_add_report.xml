<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReport">

    <SeekBar
        android:id="@+id/seekBar4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="254dp"
        android:max="5"/>

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="239dp"
        android:max="5"/>

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:max="5"/>

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:max="5"/>


    <TextView
        android:id="@+id/question4"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/question1"
        android:layout_centerVertical="true"
        android:text="@string/question4_text" />



    <TextView
        android:id="@+id/question3"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/question1"
        android:layout_marginTop="190dp"
        android:text="@string/question3_text" />

    <TextView
        android:id="@+id/question2"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/question1"
        android:layout_marginTop="106dp"
        android:text="@string/question2_text" />

    <TextView
        android:id="@+id/question1"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/seekBar1"
        android:layout_marginTop="30dp"
        android:text="@string/question1_text" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/question1"
        android:layout_marginBottom="224dp"
        android:text="@string/description_text" />



    <EditText
        android:id="@+id/editText2"
        android:layout_width="350dp"
        android:layout_height="119dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/description_edit_text"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/question1"
        android:layout_marginBottom="31dp"
        android:text="@string/submit_button" />

    <TextView
        android:id="@+id/progress_1"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/seekBar1"
        android:layout_alignTop="@+id/question1"
        android:text="@string/default_slider" />

    <TextView
        android:id="@+id/progress_3"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/seekBar1"
        android:layout_alignTop="@+id/question3"
        android:text="@string/default_slider" />

    <TextView
        android:id="@+id/progress_2"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/seekBar1"
        android:layout_alignTop="@+id/question2"
        android:text="@string/default_slider" />

    <TextView
        android:id="@+id/progress_4"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/seekBar1"
        android:layout_centerVertical="true"
        android:text="@string/default_slider" />

    <TextView
        android:id="@+id/report_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/seekBar2"
        android:text="@string/report_text" />


</RelativeLayout>