<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PsychiatristView">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/psych_chart"
        android:layout_width="224dp"
        android:layout_height="504dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/date_spinner"
        android:layout_marginBottom="26dp" />

    <ListView
        android:id="@+id/reports_list_view"
        android:layout_width="140dp"
        android:layout_height="504dp"
        android:layout_alignStart="@+id/members_button"
        android:layout_alignTop="@+id/psych_chart" />

    <Button
        android:id="@+id/members_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/date_spinner"
        android:layout_marginStart="16dp"
        android:text="@string/group_members_button" />

    <Spinner
        android:id="@+id/date_spinner"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="14dp" />
</RelativeLayout>